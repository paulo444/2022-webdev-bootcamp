<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="postTitle" class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle" autocomplete="off">
    </div>
    <div class="mb-3">
        <label for="postContent" class="form-label">Content</label>
        <textarea class="form-control" type="text" name="postContent" id="postContent" autocomplete="off"></textarea>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary btn-lg" type="submit" value="Publish">
    </div>
</form>

<%- include('partials/footer'); -%>